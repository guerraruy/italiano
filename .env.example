# Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# Database
# Connection string for your PostgreSQL database (e.g., Neon, Supabase, or local)
# Example for Neon: postgresql://user:password@ep-xxx.us-east-2.aws.neon.tech/neondb?sslmode=require
DATABASE_URL=

# JWT Configuration
# Secret key for signing JWT access tokens
# Must be at least 32 characters - use a cryptographically random string
# Generate one with: openssl rand -base64 32
JWT_SECRET=

# Optional: Secret key for signing JWT refresh tokens
# If not provided, JWT_SECRET will be used for both access and refresh tokens
# Must be at least 32 characters if provided
# Generate one with: openssl rand -base64 32
JWT_REFRESH_SECRET=

# Optional: Access token expiration time (default: 7d)
# Format: https://github.com/vercel/ms
# Examples: 15m, 1h, 7d, 30d
JWT_EXPIRES_IN=7d

# Optional: Refresh token expiration time (default: 30d)
# Format: https://github.com/vercel/ms
# Examples: 7d, 30d, 90d
JWT_REFRESH_EXPIRES_IN=30d

# Optional: Node environment (default: development)
# Options: development, production, test
NODE_ENV=development
